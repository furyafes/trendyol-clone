<!-- Profile Edit Page -->
<div class="container py-4">
    <div class="row">
        <!-- Sidebar -->
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <div class="text-center mb-3">
                        <div class="avatar mb-3">
                            <i class="fas fa-user-circle fa-4x text-danger"></i>
                        </div>
                        <h5><%= user.firstName %> <%= user.lastName %></h5>
                        <p class="text-muted"><%= user.email %></p>
                    </div>
                    
                    <nav class="nav flex-column">
                        <a class="nav-link" href="/account">
                            <i class="fas fa-tachometer-alt me-2"></i>Dashboard
                        </a>
                        <a class="nav-link active" href="/account/profile">
                            <i class="fas fa-user me-2"></i>Profil Bilgileri
                        </a>
                        <a class="nav-link" href="/account/orders">
                            <i class="fas fa-shopping-bag me-2"></i>Siparişlerim
                        </a>
                        <a class="nav-link" href="/account/addresses">
                            <i class="fas fa-map-marker-alt me-2"></i>Adreslerim
                        </a>
                        <a class="nav-link" href="/account/change-password">
                            <i class="fas fa-lock me-2"></i>Şifre Değiştir
                        </a>
                        <hr>
                        <a class="nav-link text-danger" href="/auth/logout">
                            <i class="fas fa-sign-out-alt me-2"></i>Çıkış Yap
                        </a>
                    </nav>
                </div>
            </div>
        </div>

        <!-- Main Content -->
        <div class="col-md-9">
            <div class="card">
                <div class="card-header">
                    <h4 class="mb-0">Profil Bilgileri</h4>
                </div>
                <div class="card-body">
                    <% if (locals.success) { %>
                        <div class="alert alert-success" role="alert">
                            <i class="fas fa-check-circle me-2"></i>
                            <%= success %>
                        </div>
                    <% } %>

                    <% if (locals.error) { %>
                        <div class="alert alert-danger" role="alert">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            <%= error %>
                        </div>
                    <% } %>

                    <form action="/account/profile" method="POST" id="profileForm">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="firstName" class="form-label">Ad</label>
                                <input type="text" class="form-control" id="firstName" name="firstName" 
                                       value="<%= user.firstName %>" required>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="lastName" class="form-label">Soyad</label>
                                <input type="text" class="form-control" id="lastName" name="lastName" 
                                       value="<%= user.lastName %>" required>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="email" class="form-label">E-posta Adresi</label>
                            <input type="email" class="form-control" id="email" name="email" 
                                   value="<%= user.email %>" required>
                        </div>

                        <div class="mb-3">
                            <label for="phone" class="form-label">Telefon Numarası</label>
                            <input type="tel" class="form-control" id="phone" name="phone" 
                                   value="<%= user.phone %>" required>
                        </div>

                        <div class="mb-3">
                            <label for="street" class="form-label">Adres</label>
                            <input type="text" class="form-control" id="street" name="street" 
                                   value="<%= user.address.street %>" required>
                        </div>

                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label for="city" class="form-label">Şehir</label>
                                <select class="form-select" id="city" name="city" required>
                                    <option value="">Şehir seçin</option>
                                    <option value="İstanbul" <%= user.address.city === 'İstanbul' ? 'selected' : '' %>>İstanbul</option>
                                    <option value="Ankara" <%= user.address.city === 'Ankara' ? 'selected' : '' %>>Ankara</option>
                                    <option value="İzmir" <%= user.address.city === 'İzmir' ? 'selected' : '' %>>İzmir</option>
                                    <option value="Bursa" <%= user.address.city === 'Bursa' ? 'selected' : '' %>>Bursa</option>
                                    <option value="Antalya" <%= user.address.city === 'Antalya' ? 'selected' : '' %>>Antalya</option>
                                    <option value="Adana" <%= user.address.city === 'Adana' ? 'selected' : '' %>>Adana</option>
                                    <option value="Konya" <%= user.address.city === 'Konya' ? 'selected' : '' %>>Konya</option>
                                    <option value="Gaziantep" <%= user.address.city === 'Gaziantep' ? 'selected' : '' %>>Gaziantep</option>
                                </select>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label for="district" class="form-label">İlçe</label>
                                <input type="text" class="form-control" id="district" name="district" 
                                       value="<%= user.address.district %>" required>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label for="postalCode" class="form-label">Posta Kodu</label>
                                <input type="text" class="form-control" id="postalCode" name="postalCode" 
                                       value="<%= user.address.postalCode %>" required>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a href="/account" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left me-2"></i>Geri Dön
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-save me-2"></i>Değişiklikleri Kaydet
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.nav-link {
    color: #6c757d;
    border-radius: 0.375rem;
    margin-bottom: 0.25rem;
}

.nav-link:hover, .nav-link.active {
    background-color: #f8f9fa;
    color: #ff6b6b;
}

.nav-link.text-danger:hover {
    background-color: #fff5f5;
}

.avatar {
    width: 80px;
    height: 80px;
    margin: 0 auto;
    display: flex;
    align-items: center;
    justify-content: center;
}

.card {
    border: 1px solid #e9ecef;
    border-radius: 8px;
}

.card-header {
    background-color: #f8f9fa;
    border-bottom: 1px solid #e9ecef;
}
</style>

<script>
// Form validasyonu
document.getElementById('profileForm').addEventListener('submit', function(e) {
    const firstName = document.getElementById('firstName').value.trim();
    const lastName = document.getElementById('lastName').value.trim();
    const email = document.getElementById('email').value.trim();
    const phone = document.getElementById('phone').value.trim();
    
    if (!firstName || !lastName || !email || !phone) {
        e.preventDefault();
        showToast('Lütfen tüm zorunlu alanları doldurun', 'error');
        return false;
    }
    
    if (!isValidEmail(email)) {
        e.preventDefault();
        showToast('Geçerli bir e-posta adresi girin', 'error');
        return false;
    }
    
    if (!isValidPhone(phone)) {
        e.preventDefault();
        showToast('Geçerli bir telefon numarası girin', 'error');
        return false;
    }
});

function isValidEmail(email) {
    const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
    return emailRegex.test(email);
}

function isValidPhone(phone) {
    const phoneRegex = /^(\+90|0)?[0-9]{10}$/;
    return phoneRegex.test(phone.replace(/\s/g, ''));
}

function showToast(message, type = 'info') {
    const toast = document.createElement('div');
    toast.className = `toast toast-${type}`;
    toast.innerHTML = `
        <div class="toast-content">
            <i class="fas fa-${type === 'error' ? 'exclamation-triangle' : 'info-circle'}"></i>
            <span>${message}</span>
        </div>
    `;
    
    document.body.appendChild(toast);
    
    setTimeout(() => {
        toast.classList.add('show');
    }, 100);
    
    setTimeout(() => {
        toast.classList.remove('show');
        setTimeout(() => {
            document.body.removeChild(toast);
        }, 300);
    }, 3000);
}
</script> 