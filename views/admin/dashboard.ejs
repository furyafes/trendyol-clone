<!-- Admin Dashboard -->
<div class="container-fluid py-4">
    <div class="row">
        <!-- Sidebar -->
        <div class="col-md-3 col-lg-2">
            <div class="card">
                <div class="card-body">
                    <div class="text-center mb-3">
                        <div class="avatar mb-3">
                            <i class="fas fa-user-shield fa-4x text-primary"></i>
                        </div>
                        <h5><%= user.firstName %> <%= user.lastName %></h5>
                        <p class="text-muted">Admin Panel</p>
                    </div>
                    
                    <nav class="nav flex-column">
                        <a class="nav-link active" href="/admin">
                            <i class="fas fa-tachometer-alt me-2"></i>Dashboard
                        </a>
                        <a class="nav-link" href="/admin/users">
                            <i class="fas fa-users me-2"></i>Kullanıcılar
                        </a>
                        <a class="nav-link" href="/admin/products">
                            <i class="fas fa-box me-2"></i>Ürünler
                        </a>
                        <a class="nav-link" href="/admin/orders">
                            <i class="fas fa-shopping-cart me-2"></i>Siparişler
                        </a>
                        <a class="nav-link" href="/admin/stats">
                            <i class="fas fa-chart-bar me-2"></i>İstatistikler
                        </a>
                        <hr>
                        <a class="nav-link" href="/">
                            <i class="fas fa-home me-2"></i>Siteye Dön
                        </a>
                        <a class="nav-link text-danger" href="/auth/logout">
                            <i class="fas fa-sign-out-alt me-2"></i>Çıkış Yap
                        </a>
                    </nav>
                </div>
            </div>
        </div>

        <!-- Main Content -->
        <div class="col-md-9 col-lg-10">
            <h2 class="mb-4">Admin Dashboard</h2>
            
            <!-- İstatistik Kartları -->
            <div class="row mb-4">
                <div class="col-md-3 mb-3">
                    <div class="card bg-primary text-white">
                        <div class="card-body">
                            <div class="d-flex justify-content-between">
                                <div>
                                    <h4 class="mb-0"><%= stats.totalUsers %></h4>
                                    <p class="mb-0">Toplam Kullanıcı</p>
                                </div>
                                <div class="align-self-center">
                                    <i class="fas fa-users fa-2x"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="col-md-3 mb-3">
                    <div class="card bg-success text-white">
                        <div class="card-body">
                            <div class="d-flex justify-content-between">
                                <div>
                                    <h4 class="mb-0"><%= stats.totalProducts %></h4>
                                    <p class="mb-0">Toplam Ürün</p>
                                </div>
                                <div class="align-self-center">
                                    <i class="fas fa-box fa-2x"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="col-md-3 mb-3">
                    <div class="card bg-warning text-white">
                        <div class="card-body">
                            <div class="d-flex justify-content-between">
                                <div>
                                    <h4 class="mb-0"><%= stats.totalOrders %></h4>
                                    <p class="mb-0">Toplam Sipariş</p>
                                </div>
                                <div class="align-self-center">
                                    <i class="fas fa-shopping-cart fa-2x"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="col-md-3 mb-3">
                    <div class="card bg-info text-white">
                        <div class="card-body">
                            <div class="d-flex justify-content-between">
                                <div>
                                    <h4 class="mb-0"><%= stats.totalRevenue.toFixed(2) %> TL</h4>
                                    <p class="mb-0">Toplam Gelir</p>
                                </div>
                                <div class="align-self-center">
                                    <i class="fas fa-money-bill-wave fa-2x"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <!-- Son Siparişler -->
                <div class="col-lg-8">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="mb-0">
                                <i class="fas fa-clock me-2"></i>Son Siparişler
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th>Sipariş No</th>
                                            <th>Müşteri</th>
                                            <th>Tutar</th>
                                            <th>Durum</th>
                                            <th>Tarih</th>
                                            <th>İşlem</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% recentOrders.forEach(order => { %>
                                            <tr>
                                                <td>#<%= order.orderNumber %></td>
                                                <td><%= order.userId.firstName %> <%= order.userId.lastName %></td>
                                                <td><%= order.total.toFixed(2) %> TL</td>
                                                <td>
                                                    <% 
                                                    const statusConfig = {
                                                        'pending': { class: 'warning', text: 'Beklemede' },
                                                        'processing': { class: 'info', text: 'Hazırlanıyor' },
                                                        'shipped': { class: 'primary', text: 'Kargoda' },
                                                        'delivered': { class: 'success', text: 'Tamamlandı' },
                                                        'cancelled': { class: 'danger', text: 'İptal Edildi' }
                                                    };
                                                    const status = statusConfig[order.status] || statusConfig.pending;
                                                    %>
                                                    <span class="badge bg-<%= status.class %>"><%= status.text %></span>
                                                </td>
                                                <td><%= new Date(order.createdAt).toLocaleDateString('tr-TR') %></td>
                                                <td>
                                                    <a href="/admin/orders/<%= order._id %>" class="btn btn-sm btn-outline-primary">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                </td>
                                            </tr>
                                        <% }); %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Sipariş Durumu İstatistikleri -->
                <div class="col-lg-4">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="mb-0">
                                <i class="fas fa-chart-pie me-2"></i>Sipariş Durumları
                            </h5>
                        </div>
                        <div class="card-body">
                            <% orderStatusStats.forEach(stat => { %>
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <span>
                                        <% 
                                        const statusText = {
                                            'pending': 'Beklemede',
                                            'processing': 'Hazırlanıyor',
                                            'shipped': 'Kargoda',
                                            'delivered': 'Tamamlandı',
                                            'cancelled': 'İptal Edildi'
                                        };
                                        %>
                                        <%= statusText[stat._id] || stat._id %>
                                    </span>
                                    <span class="badge bg-primary"><%= stat.count %></span>
                                </div>
                            <% }); %>
                        </div>
                    </div>

                    <!-- Hızlı İşlemler -->
                    <div class="card mt-3">
                        <div class="card-header">
                            <h5 class="mb-0">
                                <i class="fas fa-bolt me-2"></i>Hızlı İşlemler
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="d-grid gap-2">
                                <a href="/admin/products/add" class="btn btn-success">
                                    <i class="fas fa-plus me-2"></i>Yeni Ürün Ekle
                                </a>
                                <a href="/admin/orders" class="btn btn-primary">
                                    <i class="fas fa-list me-2"></i>Tüm Siparişleri Görüntüle
                                </a>
                                <a href="/admin/users" class="btn btn-info">
                                    <i class="fas fa-users me-2"></i>Kullanıcıları Yönet
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.nav-link {
    color: #6c757d;
    border-radius: 0.375rem;
    margin-bottom: 0.25rem;
}

.nav-link:hover, .nav-link.active {
    background-color: #f8f9fa;
    color: #0d6efd;
}

.nav-link.text-danger:hover {
    background-color: #fff5f5;
}

.avatar {
    width: 80px;
    height: 80px;
    margin: 0 auto;
    display: flex;
    align-items: center;
    justify-content: center;
}

.card {
    border: 1px solid #e9ecef;
    border-radius: 8px;
    box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
}

.table th {
    border-top: none;
    font-weight: 600;
}

.badge {
    font-size: 0.75em;
}
</style> 