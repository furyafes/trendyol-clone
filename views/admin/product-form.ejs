<!-- Admin Product Form -->
<div class="container-fluid py-4">
    <div class="row">
        <!-- Sidebar -->
        <div class="col-md-3 col-lg-2">
            <div class="card">
                <div class="card-body">
                    <div class="text-center mb-3">
                        <div class="avatar mb-3">
                            <i class="fas fa-user-shield fa-4x text-primary"></i>
                        </div>
                        <h5><%= user.firstName %> <%= user.lastName %></h5>
                        <p class="text-muted">Admin Panel</p>
                    </div>
                    
                    <nav class="nav flex-column">
                        <a class="nav-link" href="/admin">
                            <i class="fas fa-tachometer-alt me-2"></i>Dashboard
                        </a>
                        <a class="nav-link" href="/admin/users">
                            <i class="fas fa-users me-2"></i>Kullanıcılar
                        </a>
                        <a class="nav-link active" href="/admin/products">
                            <i class="fas fa-box me-2"></i>Ürünler
                        </a>
                        <a class="nav-link" href="/admin/orders">
                            <i class="fas fa-shopping-cart me-2"></i>Siparişler
                        </a>
                        <a class="nav-link" href="/admin/stats">
                            <i class="fas fa-chart-bar me-2"></i>İstatistikler
                        </a>
                        <hr>
                        <a class="nav-link" href="/">
                            <i class="fas fa-home me-2"></i>Siteye Dön
                        </a>
                        <a class="nav-link text-danger" href="/auth/logout">
                            <i class="fas fa-sign-out-alt me-2"></i>Çıkış Yap
                        </a>
                    </nav>
                </div>
            </div>
        </div>

        <!-- Main Content -->
        <div class="col-md-9 col-lg-10">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2><%= product ? 'Ürün Düzenle' : 'Yeni Ürün Ekle' %></h2>
                <a href="/admin/products" class="btn btn-secondary">
                    <i class="fas fa-arrow-left me-2"></i>Geri Dön
                </a>
            </div>
            
            <div class="card">
                <div class="card-body">
                    <form id="productForm">
                        <% if (product) { %>
                            <input type="hidden" name="id" value="<%= product._id %>">
                        <% } %>
                        
                        <div class="row">
                            <div class="col-md-8">
                                <!-- Temel Bilgiler -->
                                <div class="row mb-3">
                                    <div class="col-md-6">
                                        <label for="name" class="form-label">Ürün Adı *</label>
                                        <input type="text" class="form-control" id="name" name="name" 
                                               value="<%= product ? product.name : '' %>" required>
                                    </div>
                                    <div class="col-md-6">
                                        <label for="brand" class="form-label">Marka *</label>
                                        <input type="text" class="form-control" id="brand" name="brand" 
                                               value="<%= product ? product.brand : '' %>" required>
                                    </div>
                                </div>
                                
                                <div class="row mb-3">
                                    <div class="col-md-6">
                                        <label for="category" class="form-label">Kategori *</label>
                                        <select class="form-select" id="category" name="category" required>
                                            <option value="">Kategori Seçin</option>
                                            <option value="Spor Ayakkabı" <%= product && product.category === 'Spor Ayakkabı' ? 'selected' : '' %>>Spor Ayakkabı</option>
                                            <option value="Telefon" <%= product && product.category === 'Telefon' ? 'selected' : '' %>>Telefon</option>
                                            <option value="Bilgisayar" <%= product && product.category === 'Bilgisayar' ? 'selected' : '' %>>Bilgisayar</option>
                                            <option value="Elektronik" <%= product && product.category === 'Elektronik' ? 'selected' : '' %>>Elektronik</option>
                                            <option value="Giyim" <%= product && product.category === 'Giyim' ? 'selected' : '' %>>Giyim</option>
                                        </select>
                                    </div>
                                    <div class="col-md-6">
                                        <label for="stockQuantity" class="form-label">Stok Miktarı</label>
                                        <input type="number" class="form-control" id="stockQuantity" name="stockQuantity" 
                                               value="<%= product ? product.stockQuantity : 0 %>" min="0">
                                    </div>
                                </div>
                                
                                <div class="mb-3">
                                    <label for="description" class="form-label">Açıklama *</label>
                                    <textarea class="form-control" id="description" name="description" rows="4" required><%= product ? product.description : '' %></textarea>
                                </div>
                                
                                <!-- Fiyat Bilgileri -->
                                <div class="row mb-3">
                                    <div class="col-md-4">
                                        <label for="price" class="form-label">Satış Fiyatı (TL) *</label>
                                        <input type="number" class="form-control" id="price" name="price" 
                                               value="<%= product ? product.price : '' %>" step="0.01" min="0" required>
                                    </div>
                                    <div class="col-md-4">
                                        <label for="originalPrice" class="form-label">Orijinal Fiyat (TL)</label>
                                        <input type="number" class="form-control" id="originalPrice" name="originalPrice" 
                                               value="<%= product ? product.originalPrice : '' %>" step="0.01" min="0">
                                    </div>
                                    <div class="col-md-4">
                                        <label for="discount" class="form-label">İndirim (%)</label>
                                        <input type="number" class="form-control" id="discount" name="discount" 
                                               value="<%= product ? product.discount : 0 %>" min="0" max="100">
                                    </div>
                                </div>
                                
                                <!-- Resimler -->
                                <div class="mb-3">
                                    <label for="images" class="form-label">Resim URL'leri (virgülle ayırın) *</label>
                                    <textarea class="form-control" id="images" name="images" rows="3" required><%= product ? product.images.join(', ') : '' %></textarea>
                                    <small class="form-text text-muted">Resim URL'lerini virgülle ayırarak yazın</small>
                                </div>
                                
                                <!-- Boyutlar ve Renkler -->
                                <div class="row mb-3">
                                    <div class="col-md-6">
                                        <label for="sizes" class="form-label">Boyutlar (virgülle ayırın)</label>
                                        <input type="text" class="form-control" id="sizes" name="sizes" 
                                               value="<%= product ? product.sizes.join(', ') : '' %>">
                                        <small class="form-text text-muted">Örnek: 36, 37, 38, 39, 40</small>
                                    </div>
                                    <div class="col-md-6">
                                        <label for="colors" class="form-label">Renkler (virgülle ayırın)</label>
                                        <input type="text" class="form-control" id="colors" name="colors" 
                                               value="<%= product ? product.colors.join(', ') : '' %>">
                                        <small class="form-text text-muted">Örnek: Siyah, Beyaz, Kırmızı</small>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="col-md-4">
                                <!-- Ayarlar -->
                                <div class="card">
                                    <div class="card-header">
                                        <h6 class="mb-0">Ürün Ayarları</h6>
                                    </div>
                                    <div class="card-body">
                                        <div class="mb-3">
                                            <div class="form-check form-switch">
                                                <input class="form-check-input" type="checkbox" id="inStock" name="inStock" 
                                                       <%= product && product.inStock ? 'checked' : '' %>>
                                                <label class="form-check-label" for="inStock">
                                                    Stokta
                                                </label>
                                            </div>
                                        </div>
                                        
                                        <div class="mb-3">
                                            <div class="form-check form-switch">
                                                <input class="form-check-input" type="checkbox" id="isFeatured" name="isFeatured" 
                                                       <%= product && product.isFeatured ? 'checked' : '' %>>
                                                <label class="form-check-label" for="isFeatured">
                                                    Öne Çıkan Ürün
                                                </label>
                                            </div>
                                        </div>
                                        
                                        <div class="mb-3">
                                            <label for="rating" class="form-label">Puan (0-5)</label>
                                            <input type="number" class="form-control" id="rating" name="rating" 
                                                   value="<%= product ? product.rating : 0 %>" min="0" max="5" step="0.1">
                                        </div>
                                        
                                        <div class="mb-3">
                                            <label for="reviewCount" class="form-label">Değerlendirme Sayısı</label>
                                            <input type="number" class="form-control" id="reviewCount" name="reviewCount" 
                                                   value="<%= product ? product.reviewCount : 0 %>" min="0">
                                        </div>
                                    </div>
                                </div>
                                
                                <!-- Önizleme -->
                                <div class="card mt-3">
                                    <div class="card-header">
                                        <h6 class="mb-0">Önizleme</h6>
                                    </div>
                                    <div class="card-body">
                                        <div id="preview">
                                            <p class="text-muted">Ürün bilgilerini doldurduktan sonra önizleme burada görünecek</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <hr>
                        
                        <div class="d-flex justify-content-end gap-2">
                            <a href="/admin/products" class="btn btn-secondary">İptal</a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-2"></i>
                                <%= product ? 'Güncelle' : 'Kaydet' %>
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.nav-link {
    color: #6c757d;
    border-radius: 0.375rem;
    margin-bottom: 0.25rem;
}

.nav-link:hover, .nav-link.active {
    background-color: #f8f9fa;
    color: #0d6efd;
}

.nav-link.text-danger:hover {
    background-color: #fff5f5;
}

.avatar {
    width: 80px;
    height: 80px;
    margin: 0 auto;
    display: flex;
    align-items: center;
    justify-content: center;
}

.card {
    border: 1px solid #e9ecef;
    border-radius: 8px;
    box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
}

.form-label {
    font-weight: 600;
}

.form-control:focus, .form-select:focus {
    border-color: #0d6efd;
    box-shadow: 0 0 0 0.2rem rgba(13, 110, 253, 0.25);
}
</style>

<script>
document.getElementById('productForm').addEventListener('submit', async function(e) {
    e.preventDefault();
    
    const formData = new FormData(this);
    const data = Object.fromEntries(formData);
    
    // Checkbox değerlerini düzelt
    data.inStock = formData.has('inStock');
    data.isFeatured = formData.has('isFeatured');
    
    try {
        const response = await fetch('/admin/products/save', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify(data)
        });
        
        const result = await response.json();
        
        if (result.success) {
            showToast(result.message, 'success');
            setTimeout(() => {
                window.location.href = '/admin/products';
            }, 1500);
        } else {
            showToast(result.error, 'error');
        }
    } catch (error) {
        showToast('Bir hata oluştu', 'error');
    }
});

// Önizleme fonksiyonu
function updatePreview() {
    const name = document.getElementById('name').value;
    const price = document.getElementById('price').value;
    const images = document.getElementById('images').value;
    
    const preview = document.getElementById('preview');
    
    if (name && price && images) {
        const imageUrl = images.split(',')[0].trim();
        preview.innerHTML = `
            <div class="text-center">
                <img src="${imageUrl}" alt="${name}" class="img-fluid mb-2" style="max-height: 100px; border-radius: 4px;">
                <h6>${name}</h6>
                <p class="text-danger fw-bold">${price} TL</p>
            </div>
        `;
    } else {
        preview.innerHTML = '<p class="text-muted">Ürün bilgilerini doldurduktan sonra önizleme burada görünecek</p>';
    }
}

// Input değişikliklerini dinle
document.getElementById('name').addEventListener('input', updatePreview);
document.getElementById('price').addEventListener('input', updatePreview);
document.getElementById('images').addEventListener('input', updatePreview);

function showToast(message, type = 'info') {
    const toast = document.createElement('div');
    toast.className = `toast toast-${type}`;
    toast.innerHTML = `
        <div class="toast-content">
            <i class="fas fa-${type === 'error' ? 'exclamation-triangle' : type === 'success' ? 'check-circle' : 'info-circle'}"></i>
            <span>${message}</span>
        </div>
    `;
    
    document.body.appendChild(toast);
    
    setTimeout(() => {
        toast.classList.add('show');
    }, 100);
    
    setTimeout(() => {
        toast.classList.remove('show');
        setTimeout(() => {
            document.body.removeChild(toast);
        }, 300);
    }, 3000);
}
</script> 