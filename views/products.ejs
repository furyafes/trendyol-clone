<!-- Page Header -->
<div class="row mb-4">
    <div class="col-md-8">
        <h1>Ürünler</h1>
        <p class="text-muted"><%= totalProducts %> ürün bulundu</p>
    </div>
    <div class="col-md-4">
        <div class="d-flex justify-content-end">
            <select class="form-select w-auto" id="sortSelect">
                <option value="">Sıralama</option>
                <option value="price-asc" <%= currentSort === 'price-asc' ? 'selected' : '' %>>Fiyat (Düşükten Yükseğe)</option>
                <option value="price-desc" <%= currentSort === 'price-desc' ? 'selected' : '' %>>Fiyat (Yüksekten Düşüğe)</option>
                <option value="rating" <%= currentSort === 'rating' ? 'selected' : '' %>>En Çok Değerlendirilen</option>
                <option value="discount" <%= currentSort === 'discount' ? 'selected' : '' %>>En Çok İndirimli</option>
                <option value="newest" <%= currentSort === 'newest' ? 'selected' : '' %>>En Yeniler</option>
            </select>
        </div>
    </div>
</div>

<!-- Filters and Products -->
<div class="row">
    <!-- Filters Sidebar -->
    <div class="col-md-3">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Filtreler</h5>
            </div>
            <div class="card-body">
                <!-- Categories -->
                <div class="mb-4">
                    <h6>Kategoriler</h6>
                    <div class="list-group list-group-flush">
                        <a href="/products" class="list-group-item list-group-item-action <%= !currentCategory ? 'active' : '' %>">
                            Tüm Kategoriler
                        </a>
                        <% categories.forEach(category => { %>
                            <a href="/products?category=<%= encodeURIComponent(category) %>" 
                               class="list-group-item list-group-item-action <%= currentCategory === category ? 'active' : '' %>">
                                <%= category %>
                            </a>
                        <% }); %>
                    </div>
                </div>

                <!-- Brands -->
                <div class="mb-4">
                    <h6>Markalar</h6>
                    <div class="list-group list-group-flush">
                        <a href="/products" class="list-group-item list-group-item-action <%= !currentBrand ? 'active' : '' %>">
                            Tüm Markalar
                        </a>
                        <% brands.forEach(brand => { %>
                            <a href="/products?brand=<%= encodeURIComponent(brand) %>" 
                               class="list-group-item list-group-item-action <%= currentBrand === brand ? 'active' : '' %>">
                                <%= brand %>
                            </a>
                        <% }); %>
                    </div>
                </div>

                <!-- Price Range -->
                <div class="mb-4">
                    <h6>Fiyat Aralığı</h6>
                    <form action="/products" method="GET">
                        <% if (currentCategory) { %>
                            <input type="hidden" name="category" value="<%= currentCategory %>">
                        <% } %>
                        <% if (currentBrand) { %>
                            <input type="hidden" name="brand" value="<%= currentBrand %>">
                        <% } %>
                        <div class="row">
                            <div class="col-6">
                                <input type="number" class="form-control form-control-sm" name="minPrice" placeholder="Min" min="0">
                            </div>
                            <div class="col-6">
                                <input type="number" class="form-control form-control-sm" name="maxPrice" placeholder="Max" min="0">
                            </div>
                        </div>
                        <button type="submit" class="btn btn-sm btn-outline-danger mt-2 w-100">Filtrele</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Products Grid -->
    <div class="col-md-9">
        <% if (products.length === 0) { %>
            <div class="text-center py-5">
                <i class="fas fa-search fa-3x text-muted mb-3"></i>
                <h4>Ürün bulunamadı</h4>
                <p class="text-muted">Arama kriterlerinizi değiştirmeyi deneyin.</p>
                <a href="/products" class="btn btn-outline-danger">Tüm Ürünleri Gör</a>
            </div>
        <% } else { %>
            <div class="row">
                <% products.forEach(product => { %>
                    <div class="col-lg-4 col-md-6 mb-4">
                        <div class="card h-100 product-card">
                            <div class="position-relative">
                                <img src="https://via.placeholder.com/300x300/ff6b6b/ffffff?text=<%= encodeURIComponent(product.name.substring(0, 20)) %>" 
                                     class="card-img-top" alt="<%= product.name %>">
                                <% if (product.discount > 0) { %>
                                    <span class="badge bg-danger position-absolute top-0 start-0 m-2">
                                        %<%= product.discount %> İndirim
                                    </span>
                                <% } %>
                            </div>
                            <div class="card-body d-flex flex-column">
                                <h6 class="card-title">
                                    <a href="/products/<%= product._id %>" class="text-decoration-none text-dark">
                                        <%= product.name %>
                                    </a>
                                </h6>
                                <p class="card-text text-muted small"><%= product.brand %></p>
                                <div class="mb-2">
                                    <span class="text-danger fw-bold fs-5"><%= product.price.toLocaleString('tr-TR') %> ₺</span>
                                    <% if (product.originalPrice > product.price) { %>
                                        <span class="text-muted text-decoration-line-through ms-2">
                                            <%= product.originalPrice.toLocaleString('tr-TR') %> ₺
                                        </span>
                                    <% } %>
                                </div>
                                <div class="mb-2">
                                    <div class="d-flex align-items-center">
                                        <div class="text-warning me-1">
                                            <% for (let i = 0; i < Math.floor(product.rating); i++) { %>
                                                <i class="fas fa-star"></i>
                                            <% } %>
                                            <% if (product.rating % 1 !== 0) { %>
                                                <i class="fas fa-star-half-alt"></i>
                                            <% } %>
                                            <% for (let i = Math.ceil(product.rating); i < 5; i++) { %>
                                                <i class="far fa-star"></i>
                                            <% } %>
                                        </div>
                                        <small class="text-muted">(<%= product.reviewCount %>)</small>
                                    </div>
                                </div>
                                <div class="mt-auto">
                                    <button class="btn btn-outline-danger w-100 add-to-cart" 
                                            data-product-id="<%= product._id %>">
                                        <i class="fas fa-shopping-cart me-2"></i>Sepete Ekle
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>

            <!-- Pagination -->
            <% if (totalPages > 1) { %>
                <nav aria-label="Ürün sayfaları">
                    <ul class="pagination justify-content-center">
                        <% if (currentPage > 1) { %>
                            <li class="page-item">
                                <a class="page-link" href="?page=<%= currentPage - 1 %><%= currentCategory ? '&category=' + encodeURIComponent(currentCategory) : '' %><%= currentBrand ? '&brand=' + encodeURIComponent(currentBrand) : '' %><%= currentSort ? '&sort=' + currentSort : '' %>">
                                    Önceki
                                </a>
                            </li>
                        <% } %>
                        
                        <% for (let i = 1; i <= totalPages; i++) { %>
                            <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                                <a class="page-link" href="?page=<%= i %><%= currentCategory ? '&category=' + encodeURIComponent(currentCategory) : '' %><%= currentBrand ? '&brand=' + encodeURIComponent(currentBrand) : '' %><%= currentSort ? '&sort=' + currentSort : '' %>">
                                    <%= i %>
                                </a>
                            </li>
                        <% } %>
                        
                        <% if (currentPage < totalPages) { %>
                            <li class="page-item">
                                <a class="page-link" href="?page=<%= currentPage + 1 %><%= currentCategory ? '&category=' + encodeURIComponent(currentCategory) : '' %><%= currentBrand ? '&brand=' + encodeURIComponent(currentBrand) : '' %><%= currentSort ? '&sort=' + currentSort : '' %>">
                                    Sonraki
                                </a>
                            </li>
                        <% } %>
                    </ul>
                </nav>
            <% } %>
        <% } %>
    </div>
</div>

<script>
// Sort functionality
document.getElementById('sortSelect').addEventListener('change', function() {
    const url = new URL(window.location);
    url.searchParams.set('sort', this.value);
    window.location.href = url.toString();
});
</script> 